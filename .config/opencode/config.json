{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "autoshare": false,
  "autoupdate": true,

  // LLM Providers Configuration
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llama3.1": {
          "name": "Llama 3.1"
        }
      }
    }
  },

  // MCP Server Configuration
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
       "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  },

  // Agents and Rules Configuration
  "agent": {
    "build": {
      "mode": "primary",
      "model": "zai-coding-plan/glm-4.6",
      "prompt": "{file:./prompts/build.md}",
      "temperature": 0.5,
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "context7": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "google/gemini-2.5-flash",
      "prompt": "{file:./prompts/plan.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "sequential-thinking": true
      }
    },
    "general": {
      "description": "General purpose agent for various tasks",
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": false,
        "grep": false,
        "glob": false,
        "context7": true
      }
    },
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "model": "",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false
      }
    },
    "deep-thinker": {
      "description": "Agent that uses high reasoning effort for complex problems",
      "model": "openai/gpt-5",
      "reasoningEffort": "high",
      "textVerbosity": "low"
    }
  },
  "instructions": [
    "CONTRIBUTING.md",
    "docs/guidelines.md",
    ".cursor/rules/*.md",
    "docs/development-standards.md",
    "test/testing-guidelines.md",
    "packages/*/AGENTS.md"
  ],
}
